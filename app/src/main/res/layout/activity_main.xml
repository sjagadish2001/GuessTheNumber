<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.example.ujm4.guessthenumber.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:minHeight="70dp"
        android:minWidth="10dp"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="findRandomNumber"
        android:text="Start Game"
        android:id="@+id/startButton"
        android:layout_gravity="center_horizontal"
        android:typeface="serif"
        android:background="#f9f8e6b1" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:minHeight="20dp"
        android:minWidth="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Random Number 1 - 1000"
        android:id="@+id/random_num"

        android:layout_gravity="center_horizontal" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:minHeight="20dp"
        android:minWidth="10dp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="type your guess here"

        android:id="@+id/inputNumber"
        android:layout_gravity="center_horizontal" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:minHeight="20dp"
        android:minWidth="10dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHECK!!"

        android:id="@+id/checkButton"
        android:layout_column="15"
        android:textAlignment="center"

        android:textStyle="bold"
        android:onClick="checkNumber"
        android:layout_gravity="center_horizontal"
        android:typeface="serif"
        android:background="#f9f8e6b1" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:minHeight="20dp"
        android:minWidth="10dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"

        android:id="@+id/clearButton"
        android:layout_column="15"
        android:textAlignment="center"

        android:textStyle="bold"
        android:onClick="clearField"
        android:layout_gravity="center_horizontal"
        android:typeface="serif"
        android:background="#f9f8df96" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:minHeight="20dp"
        android:minWidth="10dp"
        />

    <TextView
        android:id="@+id/result_view"
        android:layout_width="wrap_content"
        android:layout_column="15"
        android:layout_height="wrap_content"
        android:hint="@string/result_view"
        android:textStyle="bold"
        android:textSize="15dp"

        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
